{
  "name": "masum/laravel-query-controller",
  "description": "A powerful Laravel controller with advanced query capabilities: dynamic filtering, searching, sorting, and pagination. Supports multiple response formats (JSON, Blade, Inertia, Livewire) for both API and web applications.",
  "keywords": [
    "laravel",
    "query",
    "filter",
    "search",
    "sort",
    "pagination",
    "controller",
    "eloquent",
    "api",
    "json-api",
    "jsend",
    "blade",
    "inertia",
    "livewire",
    "rest",
    "resource"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Masum Nishat",
      "email": "masum.nishat21@gmail.com"
    }
  ],
  "homepage": "https://github.com/masum/laravel-query-controller",
  "support": {
    "issues": "https://github.com/masum/laravel-query-controller/issues",
    "source": "https://github.com/masum/laravel-query-controller"
  },
  "require": {
    "php": "^8.1|^8.2|^8.3",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "illuminate/database": "^10.0|^11.0|^12.0",
    "illuminate/http": "^10.0|^11.0|^12.0",
    "illuminate/pagination": "^10.0|^11.0|^12.0",
    "illuminate/routing": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.0",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Masum\\QueryController\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Masum\\QueryController\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Masum\\QueryController\\QueryControllerServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
